{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "strictPropertyInitialization": false,
    "module": "es6",
    "target": "ESNext",
    "moduleResolution": "node",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true, // Necessary for default importing Phaser to pick up types properly
    "lib": ["dom", "esnext"],
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./src/*"]
    }
  },
  "include": ["src/**/*", "typings/**/*"]
}
